<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="MINESWEEPER"
        android:background="@color/black"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIFFICULTY"
                android:textAlignment="center"
                android:textSize="20sp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/black"
                ></TextView>
            <RadioButton
                android:id="@+id/HARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Hard"></RadioButton>
            <RadioButton
                android:id="@+id/MEDIUM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Medium"></RadioButton>
            <RadioButton
                android:id="@+id/EASY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Easy"></RadioButton>
        </RadioGroup>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="BOMBS"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/black"
                ></TextView>
            <RadioButton
                android:id="@+id/MANY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Many"></RadioButton>
            <RadioButton
                android:id="@+id/AVERAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Average"></RadioButton>
            <RadioButton
                android:id="@+id/FEW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Few"></RadioButton>
        </RadioGroup>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black"
        ></TextView>
    <Button
        android:id="@+id/PLAY"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:text="PLAY"
        android:layout_gravity="center">
    </Button>
</LinearLayout>